<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit transaction-type="RESOURCE_LOCAL" name="remote-server" >
		<class>com.app5.tnt.jpa.model.User</class>
		<class>com.app5.tnt.jpa.model.Address</class>
		<class>com.app5.tnt.jpa.model.UserAddress</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="tnt" />
			<property name="javax.persistence.jdbc.password" value="tnt-app" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://toplel.xyz:3306/tnt_db" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.max_fetch_depth" value="3" />
		</properties>
	</persistence-unit>
	
	<persistence-unit transaction-type="RESOURCE_LOCAL" name="remote-server-reset" >
		<class>com.app5.tnt.jpa.model.User</class>
		<class>com.app5.tnt.jpa.model.Address</class>
		<class>com.app5.tnt.jpa.model.UserAddress</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="tnt" />
			<property name="javax.persistence.jdbc.password" value="tnt-app" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://toplel.xyz:3306/tnt_db" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.max_fetch_depth" value="3" />
		</properties>
	</persistence-unit>
	
</persistence>